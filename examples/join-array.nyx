// JOIN ARRAY
// Shows how a given array can be joined together to a single string

fun join(arr: array, by: string) -> string {
  var res = ""
  loop var i = 0 : i < ~arr : i = i + 1 {
    res = res + arr[i]
	if i < (~arr - 1) { res = res + by }
  }
  return res
}

join(["Daniel", "Peter", "John"], ", ")